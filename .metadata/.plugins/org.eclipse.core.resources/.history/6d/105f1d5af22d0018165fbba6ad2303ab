import static java.lang.System.*;

public class AtCounter
{
   private char[][] atMat;
   private int atCount;

	public AtCounter()
	{
		atCount=0;
		atMat = new char[][]{{'@','-','@','-','-','@','-','@','@','@'},
									{'@','@','@','-','@','@','-','@','-','@'},
									{'-','-','-','-','-','-','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','-','@'},
									{'-','@','-','@','-','@','-','@','-','@'},
									{'@','@','@','@','@','@','-','@','@','@'},
									{'-','@','-','@','-','@','-','-','-','@'},
									{'-','@','@','@','-','@','-','-','-','-'},
									{'-','@','-','@','-','@','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','@','@'}};
	}

	public int countAts(int r, int c)
	{
		int count= 0;
		if(atMat[r][c] == '@'){
			count++;
			atMat[r][c] = '#';
			if(r!= 0 && atMat[r-1][c] == '@')
				count+= countAts(r-1,c);
			if(r!= atMat.length && atMat[r+1][c] == '@')
				count+= countAts(r+1, c);
			if(c!= 0 && atMat[r-1][c] == '@')
				count+= countAts(r,c-1);
			if(c!= atMat[r].length && atMat[r][c+1] == '@')
				count+= countAts(r,c+1);
		}
		atCount = count;
		//add in recursive code to count up the # of @s connected
		//start checking at spot [r,c]
		return count;
	}

	public int getAtCount()
	{
		return atCount;
	}

	public String toString()
	{
		String output="";
		output+=getAtCount()+" @s connected.";
		return output;
	}
}