import java.util.Arrays;
import java.util.Scanner;
import java.util.Collections;
import static java.lang.System.*;

public class FancyWords
{
	private String[] wordRay;

	public FancyWords(String sentence)
	{
		setWords(sentence);
	}

	public void setWords(String sentence)
	{
		int i =0;
		Scanner s = new Scanner(sentence);
		while(s.hasNext()){
			i++;
		}
		wordRay = new String[i];
		for(int j =0; j<i; j++){
			wordRay[j] = s.next();
		}
		System.out.println(wordRay);
	}

	public String toString()
	{
		String output="";
		int max = Integer.MIN_VALUE;
		for(int i =0; i<wordRay.length; i++){
			if(wordRay[i].length()>max){
				max = wordRay[i].length();
			}
		}
		int max1 = max;

		for(int k = wordRay.length-1; k>=0; k++){
			if(max-(max1-wordRay[k].length())>0){
				output+=wordRay[k].charAt(max-(max1-wordRay[k].length())-1);
			}
			
			output+= "\n";
		}

		max--;


		return output+"\n\n";
	}
}